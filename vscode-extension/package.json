{
  "name": "fleet-gitops",
  "displayName": "Fleet GitOps",
  "description": "Real-time validation and IntelliSense for Fleet GitOps YAML configuration files",
  "version": "0.1.0",
  "publisher": "fleetdm",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fleetdm/fleet-gitops-vscode"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "fleet",
    "gitops",
    "yaml",
    "osquery",
    "mdm",
    "device management"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "workspaceContains:**/default.yml",
    "workspaceContains:**/default.yaml",
    "workspaceContains:**/teams/*.yml",
    "workspaceContains:**/teams/*.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Fleet GitOps",
      "properties": {
        "fleetGitops.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Fleet GitOps LSP validation"
        },
        "fleetGitops.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to fleet-schema-gen binary. If empty, uses bundled binary."
        },
        "fleetGitops.fleetVersion": {
          "type": "string",
          "default": "latest",
          "description": "Fleet version for schema validation"
        },
        "fleetGitops.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Fleet LSP server"
        }
      }
    },
    "commands": [
      {
        "command": "fleetGitops.restartServer",
        "title": "Fleet: Restart Language Server"
      },
      {
        "command": "fleetGitops.showOutput",
        "title": "Fleet: Show Output Channel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
